<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container-fluid p-0">
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="error-content" data-aos="fade-up">
                        <div class="error-icon mb-4">
                            <i class="fas fa-server fa-6x text-danger"></i>
                        </div>
                        <h1 class="display-1 fw-bold text-danger mb-3">500</h1>
                        <h2 class="h3 mb-4">Server Error</h2>
                        <p class="lead mb-4">
                            Something went wrong on our end. Please try again later.
                        </p>
                        <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
                            <div class="alert alert-danger text-start">
                                <h6>Error Details (Development Mode):</h6>
                                <pre class="small"><%= error.stack %></pre>
                            </div>
                        <% } %>
                        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                            <a href="/" class="btn btn-primary btn-lg">
                                <i class="fas fa-home me-2"></i>Go Home
                            </a>
                            <a href="/contact" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-envelope me-2"></i>Report Issue
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('partials/footer') %>
