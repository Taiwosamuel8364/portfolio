<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <section class="hero-section bg-primary text-white py-5">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center" data-aos="fade-up">
                    <h1 class="display-4 fw-bold mb-4">Get In Touch</h1>
                    <p class="lead">
                        Have a project in mind? Let's discuss how we can work together to bring your ideas to life.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Content -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Contact Form -->
                <div class="col-lg-8 mb-5" data-aos="fade-right">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h3 class="card-title mb-4">Send me a message</h3>
                            
                            <!-- Success/Error Messages -->
                            <% if (message) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i><%= message %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>
                            
                            <% if (error) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>
                            
                            <form method="POST" action="/contact" id="contactForm">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="name" class="form-label">Your Name *</label>
                                        <input type="text" class="form-control" id="name" name="name" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">Email Address *</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" name="subject" 
                                           placeholder="Project inquiry, collaboration, etc.">
                                </div>
                                
                                <div class="mb-4">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea class="form-control" id="message" name="message" rows="6" 
                                              placeholder="Tell me about your project, requirements, timeline, etc." required></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-4" data-aos="fade-left">
                    <div class="contact-info">
                        <h3 class="mb-4">Contact Information</h3>
                        
                        <div class="contact-item mb-4">
                            <div class="d-flex align-items-start">
                                <div class="contact-icon me-3">
                                    <i class="fas fa-envelope fa-lg text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Email</h6>
                                    <p class="text-muted mb-0">taiwosamuel504@gmail.com</p>
                                    <small class="text-muted">I'll respond within 24 hours</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="contact-item mb-4">
                            <div class="d-flex align-items-start">
                                <div class="contact-icon me-3">
                                    <i class="fas fa-map-marker-alt fa-lg text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Location</h6>
                                    <p class="text-muted mb-0">Ile-Ife, Nigeria</p>
                                    <small class="text-muted">Open to remote work</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="contact-item mb-4">
                            <div class="d-flex align-items-start">
                                <div class="contact-icon me-3">
                                    <i class="fas fa-clock fa-lg text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Availability</h6>
                                    <p class="text-muted mb-0">Monday - Friday</p>
                                    <small class="text-muted">9:00 AM - 6:00 PM (UTC + 1)</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Social Links -->
                        <div class="social-links mt-4">
                            <h6 class="mb-3">Connect with me</h6>
                            <div class="d-flex gap-3">
                                <a href="https://github.com/Taiwosamuel8364" target="_blank" 
                                   class="btn btn-outline-dark btn-sm">
                                    <i class="fab fa-github me-1"></i>GitHub
                                </a>
                                <a href="https://linkedin.com/in/samuel-x" target="_blank" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fab fa-linkedin me-1"></i>LinkedIn
                                </a>
                                <a href="https://twitter.com/SamuelT83648296" target="_blank" 
                                   class="btn btn-outline-info btn-sm">
                                    <i class="fab fa-twitter me-1"></i>Twitter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5" data-aos="fade-up">
                <h3 class="h2 mb-3">Frequently Asked Questions</h3>
                <p class="lead text-muted">Quick answers to common questions</p>
            </div>
            
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="accordion" id="faqAccordion" data-aos="fade-up">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq1">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#faqCollapse1">
                                    What services do you offer?
                                </button>
                            </h2>
                            <div id="faqCollapse1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    I specialize in backend development services including REST API development, 
                                    database design and optimization, authentication systems, microservices architecture, 
                                    and server-side application development using Node.js and Express.js.
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq2">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#faqCollapse2">
                                    What's your typical project timeline?
                                </button>
                            </h2>
                            <div id="faqCollapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Project timelines vary depending on complexity and requirements. A simple API might take 
                                    1-2 weeks, while a complex backend system could take 1-3 months. I'll provide a detailed 
                                    timeline after understanding your specific needs.
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq3">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#faqCollapse3">
                                    Do you work with existing teams?
                                </button>
                            </h2>
                            <div id="faqCollapse3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Absolutely! I'm comfortable working both independently and as part of existing development 
                                    teams. I can integrate seamlessly with your current workflow and use your preferred tools 
                                    and methodologies.
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq4">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#faqCollapse4">
                                    What's your development process?
                                </button>
                            </h2>
                            <div id="faqCollapse4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    I follow agile development practices with regular communication and updates. 
                                    The process typically includes: requirements analysis, architecture planning, 
                                    development with regular commits, testing, deployment, and ongoing support.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Alternative Contact Methods -->
    <section class="py-5">
        <div class="container text-center" data-aos="fade-up">
            <h3 class="h2 mb-3">Prefer Other Ways to Connect?</h3>
            <p class="lead mb-4">
                Choose the communication method that works best for you
            </p>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <a href="mailto:taiwosamuel504@gmail.com" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-envelope fa-2x mb-2 d-block"></i>
                        Email Me Directly
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="https://linkedin.com/in/samuel-x" target="_blank" 
                       class="btn btn-outline-primary btn-lg w-100">
                        <i class="fab fa-linkedin fa-2x mb-2 d-block"></i>
                        LinkedIn Message
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="/resume/download" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-download fa-2x mb-2 d-block"></i>
                        Download Resume
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('partials/footer') %>
