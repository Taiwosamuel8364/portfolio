<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
@media (max-width: 768px) {
    .project-grid {
        grid-template-columns: 1fr !important;
        gap: 2rem !important;
    }
    .project-hero {
        padding: 40px 0 !important;
        text-align: center !important;
    }
    .project-hero h1 {
        font-size: 2rem !important;
    }
    .project-content {
        padding: 40px 0 !important;
    }
    .project-links {
        justify-content: center !important;
        flex-direction: column !important;
        gap: 1rem !important;
    }
    .project-links a {
        width: 100% !important;
        max-width: 200px !important;
        text-align: center !important;
    }
    .project-features {
        grid-template-columns: 1fr !important;
        gap: 1rem !important;
    }
}
@media (max-width: 480px) {
    .project-hero h1 {
        font-size: 1.8rem !important;
    }
    .project-container {
        padding: 0 15px !important;
    }
}
</style>

<div style="padding: 0; padding-top: 80px;">
    <!-- Hero Section -->
    <section class="project-hero" style="background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%); color: white; padding: 60px 0;">
        <div class="project-container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
            <div style="margin-bottom: 1rem;">
                <nav style="margin-bottom: 1rem;">
                    <a href="/" style="color: rgba(255,255,255,0.7); text-decoration: none;">Home</a>
                    <span style="color: rgba(255,255,255,0.7); margin: 0 0.5rem;">/</span>
                    <a href="/projects" style="color: rgba(255,255,255,0.7); text-decoration: none;">Projects</a>
                    <span style="color: rgba(255,255,255,0.7); margin: 0 0.5rem;">/</span>
                    <span style="color: white;"><%= project.title %></span>
                </nav>
                <h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem;"><%= project.title %></h1>
                <p style="font-size: 1.2rem; opacity: 0.9; margin: 0;"><%= project.category %></p>
            </div>
        </div>
    </section>

    <!-- Project Details -->
    <section class="project-content" style="padding: 80px 0;">
        <div class="project-container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
            <div class="project-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start;">
                <!-- Project Image -->
                <div>
                    <div style="margin-bottom: 1.5rem;">
                        <img src="<%= project.image %>" style="width: 100%; height: auto; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);" alt="<%= project.title %>"
                             onerror="this.src='/images/project-placeholder.jpg'">
                    </div>
                    
                    <!-- Project Links -->
                    <div class="project-links" style="display: flex; gap: 1rem;">
                        <% if (project.githubUrl) { %>
                            <a href="<%= project.githubUrl %>" target="_blank" style="border: 1px solid #6c757d; color: #6c757d; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: bold; display: flex; align-items: center; justify-content: center;">
                                üîó View Code
                            </a>
                        <% } %>
                        <% if (project.liveUrl) { %>
                            <a href="<%= project.liveUrl %>" target="_blank" style="background-color: #0d6efd; color: white; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: bold; display: flex; align-items: center; justify-content: center;">
                                üöÄ Live Demo
                            </a>
                        <% } %>
                    </div>
                </div>

                <!-- Project Info -->
                <div>
                    <!-- Status and Tech Stack -->
                    <div style="margin-bottom: 2rem;">
                        <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                            <h6 style="margin-right: 1rem; margin-bottom: 0; font-weight: bold;">Status:</h6>
                            <% 
                                let statusColor = '#6c757d';
                                if (project.status === 'Completed') statusColor = '#28a745';
                                else if (project.status === 'In Progress') statusColor = '#ffc107';
                            %>
                            <span style="background-color: <%= statusColor %>; color: white; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem;">
                                <%= project.status %>
                            </span>
                        </div>
                        
                        <h6 style="margin-bottom: 1rem; font-weight: bold;">Technology Stack:</h6>
                        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                            <% project.techStack.forEach(tech => { %>
                                <span style="background-color: #0d6efd; color: white; padding: 6px 12px; border-radius: 20px; font-size: 0.85rem;"><%= tech %></span>
                            <% }) %>
                        </div>
                    </div>

                    <!-- Description -->
                    <div style="margin-bottom: 2rem;">
                        <h5 style="margin-bottom: 1rem; font-weight: bold;">Project Overview</h5>
                        <p style="font-size: 1.1rem; line-height: 1.6; color: #495057;"><%= project.description %></p>
                    </div>

                    <!-- Features -->
                    <div style="margin-bottom: 2rem;">
                        <h5 style="margin-bottom: 1rem; font-weight: bold;">Key Features</h5>
                        <ul style="list-style: none; padding: 0;">
                            <% project.features.forEach(feature => { %>
                                <li style="margin-bottom: 0.75rem; display: flex; align-items: flex-start;">
                                    <span style="color: #28a745; margin-right: 0.75rem; font-size: 1.1rem;">‚úì</span>
                                    <%= feature %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Technical Details -->
    <section style="padding: 80px 0; background-color: #f8f9fa;">
        <div class="project-container" style="max-width: 1000px; margin: 0 auto; padding: 0 20px;">
            <div style="text-align: center; margin-bottom: 3rem;">
                <h3 style="font-size: 2rem; font-weight: bold; margin-bottom: 1rem;">Technical Implementation</h3>
            </div>
            
            <div class="project-features" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem;">
                <!-- Architecture -->
                <div style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">üèóÔ∏è</div>
                    <h5 style="font-weight: bold; margin-bottom: 1rem;">Architecture</h5>
                    <p style="color: #6c757d; line-height: 1.6;">
                        <% if (project.title.includes('E-Commerce')) { %>
                            RESTful API architecture with modular design, middleware for authentication, and structured error handling.
                        <% } else if (project.title.includes('Chat')) { %>
                            Real-time architecture using Socket.io with event-driven design and efficient message broadcasting.
                        <% } else if (project.title.includes('Task')) { %>
                            MVC architecture with role-based access control and comprehensive data validation.
                        <% } else { %>
                            Modern backend architecture with clean code principles and scalable design patterns.
                        <% } %>
                    </p>
                </div>
                <!-- Database -->
                <div style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">üóÑÔ∏è</div>
                    <h5 style="font-weight: bold; margin-bottom: 1rem;">Database Design</h5>
                    <p style="color: #6c757d; line-height: 1.6;">
                        <% if (project.techStack.includes('MongoDB')) { %>
                            MongoDB with Mongoose ODM for flexible document-based storage and efficient querying.
                        <% } else if (project.techStack.includes('PostgreSQL')) { %>
                            PostgreSQL with Sequelize ORM for relational data integrity and complex queries.
                        <% } else { %>
                            Optimized database design with proper indexing and relationship management.
                        <% } %>
                    </p>
                </div>

                <!-- Security -->
                <div style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">üîí</div>
                    <h5 style="font-weight: bold; margin-bottom: 1rem;">Security</h5>
                    <p style="color: #6c757d; line-height: 1.6;">
                        JWT-based authentication, password hashing with bcrypt, input validation, 
                        and rate limiting for API protection.
                    </p>
                </div>

                <!-- Performance -->
                <div style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">‚ö°</div>
                    <h5 style="font-weight: bold; margin-bottom: 1rem;">Performance</h5>
                    <p style="color: #6c757d; line-height: 1.6;">
                        Optimized queries, efficient caching strategies, and proper error handling 
                        for fast and reliable performance.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Related Projects -->
    <section style="padding: 80px 0;">
        <div class="project-container" style="max-width: 1000px; margin: 0 auto; padding: 0 20px;">
            <div style="text-align: center; margin-bottom: 3rem;">
                <h3 style="font-size: 2rem; margin-bottom: 1rem;">Other Projects You Might Like</h3>
                <p style="font-size: 1.1rem; color: #6c757d;">Explore more of my backend development work</p>
            </div>
            
            <div style="text-align: center;">
                <a href="/projects" style="background-color: #0d6efd; color: white; padding: 12px 32px; text-decoration: none; border-radius: 8px; font-size: 1.1rem; margin-right: 1rem; display: inline-block; transition: background-color 0.3s ease;">
                    üíª View All Projects
                </a>
                <a href="/contact" style="border: 2px solid #0d6efd; color: #0d6efd; background-color: transparent; padding: 10px 30px; text-decoration: none; border-radius: 8px; font-size: 1.1rem; display: inline-block; transition: all 0.3s ease;">
                    ‚úâÔ∏è Discuss Your Project
                </a>
            </div>
        </div>
    </section>
</div>

<style>
@media (max-width: 768px) {
    .project-features {
        grid-template-columns: 1fr !important;
        gap: 1.5rem !important;
    }
    
    .project-container {
        padding: 0 15px !important;
    }
    
    .project-hero {
        grid-template-columns: 1fr !important;
        gap: 2rem !important;
        text-align: center !important;
    }
    
    .project-hero h1 {
        font-size: 2rem !important;
    }
    
    .project-hero .tech-stack {
        justify-content: center !important;
    }
    
    .project-links a {
        display: block !important;
        margin-bottom: 1rem !important;
        margin-right: 0 !important;
    }
}

@media (max-width: 480px) {
    .project-hero h1 {
        font-size: 1.75rem !important;
    }
    
    .project-container {
        padding: 0 10px !important;
    }
    
    section {
        padding: 60px 0 !important;
    }
}

/* Dark mode styles */
[data-theme="dark"] .project-container {
    color: #f8f9fa;
}

[data-theme="dark"] section {
    background-color: #212529 !important;
}

[data-theme="dark"] section:nth-child(even) {
    background-color: #343a40 !important;
}

[data-theme="dark"] .project-features > div {
    background-color: #343a40 !important;
    color: #f8f9fa !important;
}

[data-theme="dark"] .project-features h5 {
    color: #f8f9fa !important;
}

[data-theme="dark"] .project-features p {
    color: #adb5bd !important;
}
</style>

<%- include('partials/footer') %>
